{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoshare": false,
  "autoupdate": true,
  "plugin": [
    "opencode-openai-codex-auth@1.0.3"
  ],
  "provider": {
    "bigboss": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "BigBoss",
      "options": {
        "baseURL": "http://192.168.1.120:8080/v1"
      },
      "models": {
        "qwen3-coder": {
          "name": "Qwen 3 Coder",
          "reasoning": false,
          "release_date": "2025-07-31",
          "cost": {
            "input": 0.3,
            "output": 1.2
          },
          "limit": {
            "context": 131072,
            "output": 8192
          },
          "temperature": false
        }
      }
    }
  },
  "permission": {
    "bash": {
      "git push": "ask",
      "*": "allow"
    }
  },
  "mcp": {
    "firecrawl-mcp": {
      "type": "local",
      "command": [
        "bun",
        "x",
        "-y",
        "firecrawl-mcp"
      ],
      "enabled": true,
      "environment": {
        "FIRECRAWL_API_KEY": "fc-free",
        "FIRECRAWL_API_URL": "http://192.168.1.121:3000",
        "FIRECRAWL_RETRY_MAX_ATTEMPTS": "10",
        "FIRECRAWL_RETRY_INITIAL_DELAY": "500"
      }
    }
  }
}
