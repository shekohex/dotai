{
  "theme": "dark",
  "autoUpdates": false,
  "includeCoAuthoredBy": false,
  "cleanupPeriodDays": 90,
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-enhanced.sh"
  },
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-wakatime"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-wakatime"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/claude-notify.py PostToolUse"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-wakatime"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/claude-notify.py UserPromptSubmit"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-wakatime"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-wakatime"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/claude-notify.py Stop"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/claude-notify.py Notification"
          }
        ]
      }
    ]
  },
  "model": "opusplan"
}
