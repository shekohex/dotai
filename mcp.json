{
  "mcpServers": {
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp"
    },
    "grep": {
      "type": "http",
      "url": "https://mcp.grep.app"
    },
    "firecrawl-mcp": {
      "command": "bunx",
      "args": [
        "-y",
        "firecrawl-mcp"
      ],
      "env": {
        "FIRECRAWL_API_KEY": "fc-free",
        "FIRECRAWL_API_URL": "http://192.168.1.121:3000",
        "FIRECRAWL_RETRY_MAX_ATTEMPTS": "10",
        "FIRECRAWL_RETRY_INITIAL_DELAY": "500"
      }
    },
    "gemini": {
      "command": "bunx",
      "args": [
        "-y",
        "gemini-mcp-tool"
      ]
    },
    "taskmaster-ai": {
      "command": "bunx",
      "args": [
        "-y",
        "--package=task-master-ai",
        "task-master-ai"
      ],
      "env": {
        "MODEL": "claude-sonnet-4-20250514",
        "MAX_TOKENS": "64000",
        "TEMPERATURE": "0.2",
        "DEFAULT_SUBTASKS": "5",
        "DEFAULT_PRIORITY": "medium"
      }
    }
  }
}
